{
  "name": "modern-reader",
  "version": "0.1.0",
  "description": "An open-source reading app built with electron.",
  "author": "Alexander <mrreads@yandex.com>",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "epub2": "^2.0.4",
    "fb2html": "^1.0.10",
    "html-react-parser": "^1.2.5",
    "i18next": "^20.2.1",
    "node-sass": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.13",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "rsuite": "^4.9.3",
    "tabler-icons-react": "^1.33.0"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "test-react": "react-scripts test --env=jsdom",
    "eject-react": "react-scripts eject",
    "build-electron": "electron-builder",
    "build": "npm run build-react && npm run build-electron",
    "start": "concurrently \"cross-env BROWSER=none npm run start-react\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "build": {
    "productName": "Modern Reader",
    "appId": "com.modern-reader.com",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    },
    "nsis": {
      "installerIcon": "public/icon.png",
      "installerHeaderIcon": "public/icon.png",
      "deleteAppDataOnUninstall": true
    }
  }
}
