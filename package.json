{
  "name": "modern-reader",
  "version": "0.0.1",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "i18next": "^21.8.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.17.3",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "simplebar-react": "^2.4.1"
  },
  "scripts": {
    "start-react": "craco start",
    "build-react": "craco build",
    "test-react": "craco test",
    "eject-react": "craco eject",
    "build": "npm run build-react && electron-builder",
    "start": "concurrently \"cross-env BROWSER=none npm run start-react\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0-alpha.5",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "electron-is-dev": "^2.0.0",
    "path-browserify": "^1.0.1",
    "wait-on": "^6.0.1"
  },
  "build": {
    "productName": "Modern Reader",
    "appId": "com.modern-reader.com",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    },
    "nsis": {
      "installerIcon": "public/icon.png",
      "installerHeaderIcon": "public/icon.png",
      "deleteAppDataOnUninstall": true
    }
  }
}
